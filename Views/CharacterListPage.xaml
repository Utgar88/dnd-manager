<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DndManager.Views.CharacterListPage"
             Title="Meine Charaktere"
             xmlns:models="clr-namespace:DndManager.Models">

    <Grid RowDefinitions="*,Auto" Padding="10">

        <!-- Liste der Charaktere -->
        <CollectionView x:Name="CharactersCollection"
                       SelectionMode="Single"
                       SelectionChanged="OnCharacterSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Character">
                    <Border Margin="5" Padding="10" BackgroundColor="#2a2a2a" StrokeShape="RoundRectangle 5">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackLayout>
                                <Label Text="{Binding Name}" 
                                       FontSize="18" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Class}" 
                                       FontSize="14" 
                                       TextColor="Gray"/>
                            </StackLayout>
                            <Label Grid.Column="1" 
                                   Text="{Binding Gender}" 
                                   VerticalOptions="Center"
                                   TextColor="LightGray"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Button zum HinzufÃ¼gen -->
        <Button Grid.Row="1" 
                Text="Neuer Charakter" 
                Clicked="OnAddCharacterClicked"
                Margin="0,10,0,0"/>
    </Grid>

</ContentPage>