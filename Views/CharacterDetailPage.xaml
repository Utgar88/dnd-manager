<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DndManager.Views.CharacterDetailPage"
             Title="Charakter bearbeiten">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Basis-Informationen -->
            <Label Text="Basis-Informationen" FontSize="20" FontAttributes="Bold"/>

            <Label Text="Name"/>
            <Entry x:Name="NameEntry" Placeholder="Charaktername"/>

            <Label Text="Geschlecht"/>
            <Entry x:Name="GenderEntry" Placeholder="z.B. Male, Female, Other"/>

            <Label Text="Klasse"/>
            <Entry x:Name="ClassEntry" Placeholder="z.B. Wizard, Fighter, Rogue"/>

            <!-- Attribute -->
            <Label Text="Attribute" FontSize="20" FontAttributes="Bold" Margin="0,20,0,0"/>

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="10">

                <!-- Strength -->
                <Label Text="Strength (STR)" VerticalOptions="Center"/>
                <Stepper x:Name="StrengthStepper" Grid.Column="1" Minimum="3" Maximum="20" Value="10" ValueChanged="OnAttributeChanged"/>
                <Label x:Name="StrengthLabel" Grid.Row="0" Grid.Column="1" Text="10" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0"/>

                <!-- Dexterity -->
                <Label Grid.Row="1" Text="Dexterity (DEX)" VerticalOptions="Center"/>
                <Stepper x:Name="DexterityStepper" Grid.Row="1" Grid.Column="1" Minimum="3" Maximum="20" Value="10" ValueChanged="OnAttributeChanged"/>
                <Label x:Name="DexterityLabel" Grid.Row="1" Grid.Column="1" Text="10" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0"/>

                <!-- Constitution -->
                <Label Grid.Row="2" Text="Constitution (CON)" VerticalOptions="Center"/>
                <Stepper x:Name="ConstitutionStepper" Grid.Row="2" Grid.Column="1" Minimum="3" Maximum="20" Value="10" ValueChanged="OnAttributeChanged"/>
                <Label x:Name="ConstitutionLabel" Grid.Row="2" Grid.Column="1" Text="10" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0"/>

                <!-- Intelligence -->
                <Label Grid.Row="3" Text="Intelligence (INT)" VerticalOptions="Center"/>
                <Stepper x:Name="IntelligenceStepper" Grid.Row="3" Grid.Column="1" Minimum="3" Maximum="20" Value="10" ValueChanged="OnAttributeChanged"/>
                <Label x:Name="IntelligenceLabel" Grid.Row="3" Grid.Column="1" Text="10" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0"/>

                <!-- Wisdom -->
                <Label Grid.Row="4" Text="Wisdom (WIS)" VerticalOptions="Center"/>
                <Stepper x:Name="WisdomStepper" Grid.Row="4" Grid.Column="1" Minimum="3" Maximum="20" Value="10" ValueChanged="OnAttributeChanged"/>
                <Label x:Name="WisdomLabel" Grid.Row="4" Grid.Column="1" Text="10" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0"/>

                <!-- Charisma -->
                <Label Grid.Row="5" Text="Charisma (CHA)" VerticalOptions="Center"/>
                <Stepper x:Name="CharismaStepper" Grid.Row="5" Grid.Column="1" Minimum="3" Maximum="20" Value="10" ValueChanged="OnAttributeChanged"/>
                <Label x:Name="CharismaLabel" Grid.Row="5" Grid.Column="1" Text="10" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0"/>

            </Grid>

            <!-- Buttons -->
            <Button Text="Speichern" Clicked="OnSaveClicked" Margin="0,20,0,0"/>
            <Button Text="Abbrechen" Clicked="OnCancelClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>